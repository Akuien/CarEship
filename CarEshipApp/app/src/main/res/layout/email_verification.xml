<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:title="Email Verification" />


    <TextView
        android:id="@+id/Email"
        android:layout_width="408dp"
        android:layout_height="129dp"
        android:layout_marginBottom="24dp"
        android:background="@color/tinted_blue"
        android:drawablePadding="20dp"
        android:fontFamily="@font/hammersmith_one"
        android:hint="@string/email"
        android:padding="20dp"
        android:text="@string/verification_link_has_been_sent_to_your_email"
        android:textColor="@color/careship_palette_Egyptian_blue"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/verifyMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="261dp"
        android:layout_height="65dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="@color/careship_palette_popstar"
        android:fontFamily="@font/hammersmith_one"
        android:text="Continue"
        android:textColor="@color/careship_palette_beige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <TextView
        android:id="@+id/verifyMsg"
        android:layout_width="308dp"
        android:layout_height="78dp"
        android:layout_marginEnd="52dp"
        android:text="Email has not been verified yet"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="208dp"
        android:layout_height="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:srcCompat="@drawable/nicepng_email_symbol_png_9602830"
        tools:layout_editor_absoluteY="91dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="27dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/hammersmith_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>

