<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.careshipapp.car_control.JoystickMainActivity">

    <com.example.careshipapp.car_control.JoystickFunctionality
        android:id="@+id/joystickView"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/blue"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        android:layout_weight="0.3"
        android:contentDescription="@string/cameraView"
        tools:ignore="MissingConstraints" />

<!--    <Button
        android:layout_width="190dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/bright_blue"
        android:text="@string/delivered"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="221dp" />-->

    <Switch
        android:id="@+id/autopilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/joystickView"
        app:layout_constraintBaseline_toTopOf="@id/joystickView"
        app:layout_constraintRight_toRightOf="@id/joystickView"
        android:switchMinWidth="56dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        android:text="AUTOPILOT:"
        android:checked="false"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>

